  hashes
);
CREATE OPERATOR > (
  leftarg = int42,
  rightarg = int42,
  procedure = my_gt,
  hashes
);
CREATE OPERATOR >= (
  leftarg = int42,
  rightarg = int42,
  procedure = my_gteq,
  hashes
);
CREATE OR REPLACE FUNCTION my_comp_func(int42, int42)
RETURNS int AS
$$
BEGIN
IF $1 < $2 THEN
  return -1;
ELSIF $1 = $2 THEN
  return 0;
ELSE
  return 1;
END IF;
END;
$$ LANGUAGE PLPGSQL;
CREATE OPERATOR CLASS my_operator_class_comp_type
DEFAULT
FOR TYPE int42 USING btree
AS
OPERATOR 1 <,
OPERATOR 2 <=,
OPERATOR 3 =,
OPERATOR 4 >=,
OPERATOR 5 >,
FUNCTION 1 my_comp_func(int42, int42);
